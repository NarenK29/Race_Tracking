@model IEnumerable<Race_Track.Models.Race>

@{
    ViewBag.Title = "Race Track Home";
}

<h4 class="heading">Live Vehicles on Track</h4>



<p>
    @Html.ActionLink("Add Vehicle to Race", "Create", "")
</p>
<table class="table">
    <tr>
        <th></th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Type)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VehicleID)
        </th>

    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.ActionLink("View", "Details", new { id = item.ID }) |
                @Html.ActionLink("Remove", "Delete", new { id = item.ID })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VehicleID)
            </td>

        </tr>
    }

</table>
